FILE = sar_interp1.c sar_kernel1_driver.c sar_utils.c timer.c

CC_ARM = arm-linux-gnueabi-gcc
CC_FLAGS_ARM = -static -DAMHM_APPROXIMATION -O0
ISA_FILE_ARM = ../../shared_lib/m5op_arm.S
LDFLAGS_ARM = -lpthread -lm -lrt

CC = gcc
CC_FLAGS = -static
LDFLAGS = -lpthread -lm -lrt

BINDIR = ../../bin

all: arm x86

arm:
	$(CC_ARM)  $(CC_FLAGS_ARM) $(FILE) -o $(BINDIR)/arm/pfa1 $(ISA_FILE_ARM) $(LDFLAGS_ARM)
	
x86:
	$(CC)  $(CC_FLAGS) $(FILE) -o $(BINDIR)/x86/pfa1 $(LDFLAGS)

clean:
	rm -rf $(BINDIR)/arm/pfa1 output*
	rm -rf $(BINDIR)/x86/pfa1 output*
